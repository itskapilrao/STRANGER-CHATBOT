{
  "name": "STRANGER CHATBOT",
  "description": "A Telegram AI-based Chatbot using Pyrogram and offline AI (Llama/Ollama).",
  "logo": "https://files.catbox.moe/48hczp.jpg",
  "keywords": [
    "python",
    "telegram",
    "chatbot",
    "pyrogram",
    "AI",
    "llama",
    "ollama"
  ],
  "env": {
    "API_ID": {
      "description": "Get this value from https://my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Get this value from https://my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "A Bot's token from Botfather",
      "required": true
    },
    "BOT_USERNAME": {
      "description": "Your bot's username (without @)",
      "required": false
    },
    "OWNER_USERNAME": {
      "description": "Owner's username (without @)",
      "required": false
    },
    "BOT_NAME": {
      "description": "Your bot's public name",
      "required": false,
      "value": "STRANGER CHATBOT"
    },
    "UPDATE_CHNL": {
      "description": "Your update channel username (without @), optional",
      "required": false
    },
    "SUPPORT_GRP": {
      "description": "Your support group username (without @), optional",
      "required": false
    },
    "STKR": {
      "description": "Sticker file_id for start (required if used)",
      "required": false
    },
    "START_IMG": {
      "description": "URL for the image used with /start, optional",
      "required": false,
      "value": "https://files.catbox.moe/48hczp.jpg"
    },
    "LLAMA_API": {
      "description": "Llama/Ollama API URL (e.g. http://localhost:11434 or your AI server endpoint)",
      "required": false,
      "value": ""
    },
    "MONGO_URL": {
      "description": "MongoDB URL if you plan to keep learning features, else leave empty",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
